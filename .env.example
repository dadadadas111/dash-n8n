# =====================================================
# PostgreSQL Configuration
# =====================================================

# PostgreSQL root user (used by Docker container initialization)
POSTGRES_USER=postgres

# PostgreSQL root password (used by Docker container initialization)
POSTGRES_PASSWORD=change_this_secure_password

# PostgreSQL database name for n8n
POSTGRES_DB=n8n

# PostgreSQL non-root user (application user for n8n)
POSTGRES_NON_ROOT_USER=n8n_user

# PostgreSQL non-root user password (used by n8n to connect to database)
POSTGRES_NON_ROOT_PASSWORD=change_this_n8n_db_password

# =====================================================
# n8n Database Configuration
# =====================================================

# Database type (postgres for PostgreSQL)
DB_TYPE=postgresdb

# PostgreSQL host (use service name from docker-compose)
DB_POSTGRESDB_HOST=postgres

# PostgreSQL port (internal container port)
DB_POSTGRESDB_PORT=5432

# PostgreSQL database name (must match POSTGRES_DB)
DB_POSTGRESDB_DATABASE=n8n

# PostgreSQL user (must match POSTGRES_NON_ROOT_USER)
DB_POSTGRESDB_USER=n8n_user

# PostgreSQL password (must match POSTGRES_NON_ROOT_PASSWORD)
DB_POSTGRESDB_PASSWORD=change_this_n8n_db_password

# =====================================================
# n8n Queue Configuration (Redis)
# =====================================================

# Execution mode: queue enables background job processing with workers
EXECUTIONS_MODE=queue

# Redis host (use service name from docker-compose)
QUEUE_BULL_REDIS_HOST=redis

# Redis port (internal container port)
QUEUE_BULL_REDIS_PORT=6379

# =====================================================
# n8n Security Configuration
# =====================================================

# n8n encryption key for securing credentials in database
# IMPORTANT: Generate a secure random key using one of these methods:
#   - Linux/Mac: openssl rand -hex 32
#   - Node.js: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#   - Online: https://www.random.org/strings/ (use 64 characters, hex)
# NEVER change this after initial setup or you'll lose access to encrypted credentials!
N8N_ENCRYPTION_KEY=change_this_to_random_64_character_hex_string

# =====================================================
# n8n Webhooks & External Access Configuration
# =====================================================

# n8n host (domain or IP address for accessing n8n interface)
# Examples: localhost, n8n.yourdomain.com, 192.168.1.100
N8N_HOST=localhost

# n8n protocol (http or https - use https in production with reverse proxy)
N8N_PROTOCOL=http

# Webhook URL (full URL for webhook endpoints - should match N8N_PROTOCOL://N8N_HOST:PORT)
# Examples: http://localhost:5678, https://n8n.yourdomain.com
WEBHOOK_URL=http://localhost:5678

# =====================================================
# Timezone Configuration
# =====================================================

# Generic timezone for n8n (used for scheduling and date/time operations)
# Examples: America/New_York, Europe/London, Asia/Tokyo
# Full list: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
GENERIC_TIMEZONE=America/New_York

# Container timezone (should match GENERIC_TIMEZONE)
TZ=America/New_York
